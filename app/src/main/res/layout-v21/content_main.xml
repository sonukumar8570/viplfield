<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BF72DDD8">

            <TextView
                android:id="@+id/userNameLogin"
                style="@style/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:background="@drawable/hollow_background"
                android:maxLines="2"
                android:textColor="#F44336" />


        </RelativeLayout>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="16sp"
            android:src="@drawable/ic_action_not_connected"
            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="2">

            <TextView
                android:id="@+id/attendance"
                style="@style/textViewStyle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8sp"
                android:background="@drawable/hollow_background"
                android:gravity="center_horizontal"
                android:onClick="goNext"
                android:text="@string/attendance"
                android:textColor="#000000"
                app:drawableTopCompat="@mipmap/ic_meri_hazri" />

            <TextView
                android:id="@+id/document"
                style="@style/textViewStyle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8sp"
                android:background="@drawable/hollow_background"
                android:gravity="center_horizontal"
                android:onClick="goNext"
                android:text="@string/doc"
                android:textColor="#FFC107"
                app:drawableTopCompat="@mipmap/ic_ftp" />

            <TextView
                android:id="@+id/survey"
                style="@style/textViewStyle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8sp"
                android:background="@drawable/hollow_background"
                android:gravity="center_horizontal"
                android:onClick="goNext"
                android:text="@string/survey"
                android:textColor="#3F51B5"
                app:drawableTopCompat="@mipmap/ic_survey" />

            <TextView
                android:id="@+id/schedule"
                style="@style/textViewStyle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8sp"
                android:background="@drawable/hollow_background"
                android:gravity="center_horizontal"
                android:onClick="goNext"
                android:text="@string/schedule"
                android:textColor="#4CAF50"
                app:drawableTopCompat="@mipmap/ic_schedule" />

            <TextView
                android:id="@+id/billEntry"
                style="@style/textViewStyle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8sp"
                android:background="@drawable/hollow_background"
                android:gravity="center_horizontal"
                android:onClick="goNext"
                android:text="@string/bill"
                android:textColor="@color/colorPrimary"
                app:drawableTopCompat="@mipmap/ic_entry" />

            <TextView
                android:id="@+id/profileUpdate"
                style="@style/textViewStyle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8sp"
                android:background="@drawable/hollow_background"

                android:gravity="center_horizontal"
                android:onClick="goNext"
                android:text="@string/update"
                android:textColor="#046109"
                app:drawableTopCompat="@mipmap/ic_update" />

            <TextView
                android:id="@+id/fieldSlip"
                style="@style/textViewStyle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8sp"
                android:background="@drawable/hollow_background"
                android:gravity="center_horizontal"
                android:onClick="goNext"
                android:text="Field Slip"
                android:textColor="#046109"
                app:drawableTopCompat="@mipmap/ic_field" />
            <TextView
                android:id="@+id/bricUpdate"
                style="@style/textViewStyle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8sp"
                android:background="@drawable/hollow_background"
                android:gravity="center_horizontal"
                android:onClick="goNext"
                android:text="Brix Update"
                android:textColor="#046109"
                app:drawableTopCompat="@mipmap/ic_field" />
            <TextView
                android:id="@+id/endPlot"
                style="@style/textViewStyle"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8sp"
                android:background="@drawable/hollow_background"
                android:gravity="center_horizontal"
                android:onClick="goNext"
                android:text="End plot"
                android:textColor="@android:color/holo_red_dark"
                app:drawableTopCompat="@mipmap/ic_end" />
        </GridLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="8sp"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="8sp"
        android:layout_marginBottom="8sp"
        android:background="@drawable/hollow_background"
        android:drawableStart="@mipmap/ic_icon"
        android:gravity="center"
        android:maxLines="2"
        android:onClick="browser"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:text="@string/main"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        android:textStyle="bold" />
</RelativeLayout>